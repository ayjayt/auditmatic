#!/bin/bash

title logwatch

CHECK=$(sudo $SDOFLAG /usr/sbin/logwatch -v)
echo $CHECK | grep -e "not found" && { echo "logwatch is a required dependency for ${0}"; exit; }

LOGWATCH_TS="$AA_CONFIGDIR/logwatch_ts"
touch "$LOGWATCH_TS"

sudo $SUDOFLAG du -sh /var/log

if chk_int "$LOGWATCH_TS" "60*60*06" || chk_all; then
	pass
else
	echo "Skipping..."
	exit 0
fi


sudo $SUDOFLAG /usr/sbin/logwatch --range "since 24 hours ago for those hours"
